# Gateway service port and host binding
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Upstream service URLs
CATALOG_URL=http://localhost:3001
IDENTITY_URL=http://localhost:3002
BASKET_URL=http://localhost:3003
ORDERING_URL=http://localhost:3004
WEBHOOKS_URL=http://localhost:3005

# Rate limiting
# Maximum number of requests allowed per time window per IP
RATE_LIMIT_MAX=100
# Time window for rate limiting (e.g. "1 minute", "30 seconds")
RATE_LIMIT_WINDOW=1 minute

# OpenTelemetry tracing (Jaeger OTLP endpoint)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
