{
  "name": "@ecommerce/catalog-service",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --watch --import ./src/instrumentation.ts src/app.ts",
    "start": "node --import ./src/instrumentation.ts src/app.ts",
    "test": "node --test src/**/*.test.ts",
    "db:up": "dbmate --url $DATABASE_URL --migrations-dir db/migrations up",
    "db:down": "dbmate --url $DATABASE_URL --migrations-dir db/migrations down",
    "db:new": "dbmate --url $DATABASE_URL --migrations-dir db/migrations new"
  },
  "dependencies": {
    "@ecommerce/auth": "*",
    "@ecommerce/observability": "*",
    "@ecommerce/db": "*",
    "@ecommerce/event-bus": "*",
    "@ecommerce/logger": "*",
    "@ecommerce/outbox": "*",
    "@ecommerce/shared": "*",
    "@fastify/awilix": "^7.0.0",
    "@fastify/helmet": "^12.0.0",
    "@sinclair/typebox": "^0.34.0",
    "awilix": "^12.0.0",
    "fastify": "^5.0.0"
  }
}
